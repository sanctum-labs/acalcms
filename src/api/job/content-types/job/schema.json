{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "_softDeletedAt": {
      "type": "datetime",
      "configurable": false,
      "writable": false,
      "visible": false,
      "private": true
    },
    "_softDeletedById": {
      "type": "integer",
      "configurable": false,
      "writable": false,
      "visible": false,
      "private": true
    },
    "_softDeletedByType": {
      "type": "string",
      "configurable": false,
      "writable": false,
      "visible": false,
      "private": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "available": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Permanent Full Time",
        "Permanent Part Time",
        "Temporary Full Time",
        "Temporary Part Time"
      ],
      "required": true,
      "default": "Permanent Full Time"
    },
    "department": {
      "type": "string",
      "required": true
    },
    "responsibilities": {
      "type": "richtext",
      "required": true
    },
    "requirements": {
      "type": "richtext",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "closingDate": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "salary": {
      "type": "biginteger"
    },
    "job_applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job-application.job-application",
      "mappedBy": "job"
    },
    "level": {
      "type": "string",
      "required": true
    },
    "jobSpecifications": {
      "type": "richtext"
    },
    "personSpecifications": {
      "type": "richtext"
    },
    "keyCompetenciesAndSkills": {
      "type": "richtext"
    },
    "termsOfService": {
      "type": "richtext"
    },
    "howToApply": {
      "type": "richtext"
    },
    "jobAdvert": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::jobadvert.jobadvert"
    },
    "applyOnline": {
      "displayName": "applyOnline",
      "type": "component",
      "repeatable": false,
      "component": "links.apply-online"
    },
    "rank": {
      "type": "integer",
      "required": true,
      "min": 1
    }
  }
}
