{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "People"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Avatar": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "Name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "JobTitle": {
      "type": "string",
      "required": true
    },
    "Location": {
      "type": "string"
    },
    "Bio": {
      "type": "text",
      "required": true
    },
    "Quote": {
      "type": "text"
    },
    "Contact": {
      "type": "component",
      "repeatable": true,
      "component": "links.link",
      "required": true
    }
  }
}
